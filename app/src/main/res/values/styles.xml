<resources>
    <style name="LightTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="primaryTextColor">@color/lightTextColor</item>
        <item name="primaryBackgroundColor">@color/lightPrimaryColor</item>
        <item name="accentBackgroundColor">@color/lightAccentColor</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="primaryTextColor">@color/darkTextColor</item>
        <item name="primaryBackgroundColor">@color/darkPrimaryColor</item>
        <item name="accentBackgroundColor">@color/darkAccentColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
